@using ecommerce.Models
@using ecommerce.ViewModel
@model EcommerceViewModel
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Product Details</title>
        <style>
            body {
                margin: 0;
                padding: 0;
                font-family: Arial, sans-serif;
                background: linear-gradient(to bottom, #D9690F, #DBA000);
                display: flex;
                justify-content: center;
                align-items: center;
                min-height: 100vh;
                color: white;
            }

            .container {
                background: rgba(0, 0, 0, 0.7);
                padding: 20px;
                border-radius: 15px;
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
                max-width: 800px;
                width: 100%;
                box-sizing: border-box;
                overflow: hidden;
            }

            h1 {
                margin-bottom: 20px;
                font-size: 24px;
                text-align: center;
            }

            .info-group {
                margin-bottom: 15px;
                display: flex;
                align-items: center;
                width: 100%;
            }

            label {
                font-weight: bold;
                margin-right: 10px;
                min-width: 150px;
                white-space: nowrap;
            }

            .info-value {
                flex: 1;
                padding: 10px;
                border-radius: 5px;
                background: rgba(255, 255, 255, 0.1);
                color: white;
                overflow: hidden;
                word-break: break-word;
            }

            .image-preview {
                max-width: 300px;
                margin-left: 20px;
                overflow: hidden;
                display: flex;
                justify-content: center;
            }

                .image-preview img {
                    width: 100%;
                    max-width: 100%;
                    height: auto;
                    border-radius: 5px;
                }

            .button-group {
                margin-top: 20px;
                text-align: center;
            }

                .button-group a {
                    background-color: #D9A657;
                    color: #000;
                    padding: 12px;
                    border-radius: 5px;
                    text-decoration: none;
                    font-size: 16px;
                    transition: background-color 0.3s, color 0.3s;
                }

                    .button-group a:hover {
                        background-color: #DBA000;
                        color: white;
                    }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Product Details</h1>
            <div class="info-group">
                <label>Product ID:</label>
                <div class="info-value">@Model.Product.ProductID</div>
            </div>
            <div class="info-group">
                <label>Product Name:</label>
                <div class="info-value">@Model.Product.ProductName</div>
            </div>
            <div class="info-group">
                <label>Price:</label>
                <div class="info-value">@Model.Product.Price.ToString("C")</div>
            </div>
            <div class="info-group">
                <label>Description:</label>
                <div class="info-value">@Model.Product.Description</div>
            </div>
            <div class="info-group">
                <label>Product Image:</label>
                <div class="image-preview">
                    @if (@Model.Product.ProductImage != null)
                    {
                        <img src="@Model.Product.ProductImage" alt="Product Image" style="width: 200px; height: auto;">
                    }
                    else
                    {
                        <img src="/placeholder-images-image_large.webp" alt="Product" style="width: 200px; height: auto;">
                    }
                </div>
            </div>
            <div class="button-group">
                
                    <a href="/Ecommerce/AdminHome">Back to Products</a>
                
            </div>
        </div>
    </body>
    </html>
}
