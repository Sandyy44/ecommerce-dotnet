@using ecommerce.Models
@using ecommerce.ViewModel
@model EcommerceViewModel
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Edit Product</title>
        <style>
            body {
                margin: 0;
                padding: 0;
                font-family: Arial, sans-serif;
                background: linear-gradient(to bottom, #D9690F, #DBA000);
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                color: white;
            }

            .container {
                background: rgba(0, 0, 0, 0.5);
                padding: 20px;
                border-radius: 15px;
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
                max-width: 800px;
                width: 90%;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            h1 {
                margin-bottom: 20px;
                font-size: 24px;
            }

            .form-group {
                margin-bottom: 15px;
                display: flex;
                align-items: center;
                width: 100%;
            }

            label {
                font-weight: bold;
                margin-right: 10px;
                min-width: 150px;
            }

            input[type="text"], input[type="number"], textarea, .file-input {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 5px;
                margin-bottom: 10px;
                font-size: 14px;
            }

            textarea {
                resize: vertical;
            }

            .file-input {
                display: none;
            }

            .file-label {
                width: 100%;
                padding: 15px;
                background: linear-gradient(to right, #D98A0F, #D9A657);
                border: 2px dashed #D9A657;
                border-radius: 10px;
                cursor: pointer;
                font-size: 16px;
                color: white;
                text-align: center;
                display: block;
                margin-bottom: 10px;
            }

                .file-label:hover {
                    background: linear-gradient(to right, #DBA000, #D98A0F);
                }

            button {
                background-color: #D9A657;
                color: #000;
                border: none;
                padding: 12px;
                width: 100%;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
                transition: background-color 0.3s, color 0.3s;
            }

                button:hover {
                    background-color: #DBA000;
                    color: white;
                }

            .form-footer {
                margin-top: 15px;
                font-size: 14px;
            }

                .form-footer a {
                    color: #D9A657;
                    text-decoration: none;
                }

                    .form-footer a:hover {
                        text-decoration: underline;
                    }

            .image-preview {
                max-width: 300px;
                margin-left: 20px;
            }

                .image-preview img {
                    width: 100%;
                    border-radius: 5px;
                }
        </style>
    </head>
    <body>
        <br />
        <br />
        <br />
        <div class="container">
            <h1>Edit Product</h1>
            <form action="/Ecommerce/DoneUpdatingProduct" method="post">
                <div class="form-group">
                    <input asp-for="@Model.Product.ProductID" type="text" id="productName" value="@Model.Product.ProductID" hidden>

                    <label asp-for="@Model.Product.ProductName">Product Name:</label>
                    <input asp-for="@Model.Product.ProductName" type="text" id="productName" value="@Model.Product.ProductName">
                    <span class="text-danger" asp-validation-for="@Model.Product.ProductName"></span>

                </div>
                <div class="form-group">
                    <label asp-for="@Model.Product.Price">Price:</label>
                    <input asp-for="@Model.Product.Price" type="number" id="price" value="@Model.Product.Price" step="0.01">
                    <span class="text-danger" asp-validation-for="@Model.Product.Price"></span>

                    </div>
                <div class="form-group">
                    <label asp-for="@Model.Product.Description">Description:</label>
                    <textarea asp-for="@Model.Product.Description" id="description" rows="3">@Model.Product.Description</textarea>
                    <div class="image-preview" id="imagePreview">
                        @if (@Model.Product.ProductImage != null)
                        {
                            <img src="@Model.Product.ProductImage" alt="Product Image" style="width: 200px; height: auto;">

                        }
                        else
                        {
                            <img src="/placeholder-images-image_large.webp" alt="Product" style="width: 200px; height: auto;">

                        }
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="image">Product Image:</label>
                    <label for="image" class="file-label">Choose a file</label>
                    <input type="file" id="image" class="file-input" accept="image/*" onchange="previewImage(event); savePhoto(event);">
                    <input asp-for="Product.ProductImage" id="ProductImage" type="text" value="@Model.Product.ProductImage" hidden>
                </div>
                <button type="submit">Update Product</button>
                <div class="form-footer">
                    <p><a href="/Ecommerce/EditProducts">Cancel</a></p>
                </div>



            </form>
        </div>
        <script>
            function previewImage(event) {
                const reader = new FileReader();
                reader.onload = function () {
                    const output = document.getElementById('imagePreview')?.querySelector('img');
                    if (output) {
                        output.src = reader.result;
                    }
                };
                reader.readAsDataURL(event.target.files[0]);
            }

            function savePhoto(event) {
                const file = event.target.files[0];
                if (!file) {
                    console.error('No file selected');
                    document.getElementById('ProductImage').value = ""; 
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (e) {
                    const base64String = e.target.result;
                    console.log('Base64 String:', base64String); 
                    document.getElementById('ProductImage').value = base64String;
                };

                reader.onerror = function (e) {
                    console.error('Error reading file:', e); 
                };

                reader.readAsDataURL(file);
            }

            document.getElementById('image').addEventListener('change', function (event) {
                previewImage(event);
                savePhoto(event);
            });
        </script>


    </body>
    </html>



}
