@using ecommerce.Models
@using ecommerce.ViewModel
@model EcommerceViewModel
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Admin Login</title>
        <style>
            body {
                margin: 0;
                padding: 0;
                font-family: Arial, sans-serif;
                background: linear-gradient(to right, #00c6ff, #0072ff);
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                color: white;
                text-align: center;
            }

            .container {
                background: rgba(0, 0, 0, 0.5);
                padding: 30px 40px;
                border-radius: 15px;
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
                max-width: 400px;
                width: 100%;
            }

            h1 {
                margin: 0 0 30px 0;
                font-size: 28px;
            }

            .form-group {
                margin-bottom: 20px;
                text-align: left;
            }

            label {
                display: block;
                margin-bottom: 8px;
                font-weight: bold;
            }

            input[type="email"], input[type="password"] {
                width: 100%;
                padding: 12px 15px;
                border: none;
                border-radius: 5px;
                margin-bottom: 10px;
                font-size: 16px;
            }

            button {
                background-color: #ffffff;
                color: #0072ff;
                border: none;
                padding: 15px;
                width: 100%;
                border-radius: 5px;
                cursor: pointer;
                font-size: 18px;
                transition: background-color 0.3s, color 0.3s;
            }

                button:hover {
                    background-color: #0072ff;
                    color: #ffffff;
                }

            .form-footer {
                margin-top: 20px;
                font-size: 14px;
            }

                .form-footer a {
                    color: #00c6ff;
                    text-decoration: none;
                }

                    .form-footer a:hover {
                        text-decoration: underline;
                    }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Welcome Back User</h1>
            <form action="/Ecommerce/CheckUser" method="post">
                <div class="form-group">
                    <label asp-for="@Model.User.UserEmail">Email:</label>
                    <input asp-for="@Model.User.UserEmail" type="email" id="email">
                    <span class="text-danger" asp-validation-for="@Model.User.UserEmail"></span>

                </div>
                <div class="form-group">
                    <label asp-for="@Model.User.UserPassword">Password:</label>
                    <input asp-for="@Model.User.UserPassword" type="password" id="password">
                    <span class="text-danger" asp-validation-for="@Model.User.UserPassword"></span>

                </div>
                <div>
                    <span class="text-danger">@Model.Message</span>
                </div>
                <button type="submit">Login</button>
                <div class="form-footer">
                </div>
            </form>
        </div>
    </body>
    </html>


}
